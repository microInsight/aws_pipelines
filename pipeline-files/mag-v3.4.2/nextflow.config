    save_phixremoved_reads                    = false
    host_fasta                                = null
    host_fasta_bowtie2index                   = null
    host_genome                               = null
    host_removal_verysensitive                = false
    host_removal_save_ids                     = false
    save_hostremoved_reads                    = false
    bbnorm                                    = false
