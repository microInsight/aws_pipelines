    taxpasta_add_lineage                      = true
    taxpasta_add_idlineage                    = false
    taxpasta_add_ranklineage                  = false
    taxpasta_ignore_errors                    = true
    centrifuger_db                            = "s3://healthomics-nfcore-bundles-125434852769/centrifuger_db/centrifuger_db.tar.gz"
    tax_prof_gtdb_metadata                    = "s3://healthomics-nfcore-bundles-125434852769/gtdb/gtdb_r220_metadata/gtdb_r220_metadata.tsv.gz"
